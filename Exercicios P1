<html>
<head>
	<script type="text/javascript">
		var candidatos=Array();

		function cadastrar() {
			var form=document.forms["cadastroprogramacaoweb"];
		    var  nome=form.elements["nome"];
		    var data_nasc=form.elements["data_nasc"];
		     var email=form.elements["email"];
		      var cargo=form.elements["cargo"];

		      if(nome.value===null || nome.value.trim()===''){
		      	alert("Digite Nome");
		      	return;
		      } else if(data_nasc.value===null || data_nasc.value.trim()===''){
		      	alert("Digite Data de Nascimento");
		      	return;
		      } else if(email.value===null || email.value.trim()===''){
		      	alert("Digite E-mail");
		      	return;
		      } 
		 

		      var candidato = {};
		      candidato.nome=nome.value;
		      candidato.data_nasc=data_nasc.value;
		      candidato.email=email.value;
		       candidato.cargo=cargo.value;

		       candidatos.push(candidato);

		       var listTable = document.getElementById("listaCandidatos");
		       var htmlTable="<thead><tr><td>Nome</td><td>Data Nascimento</td><td>E-mail</td><td>Cargo</td></tr></thead>";

		       for(var i=0;i<candidatos.length;i++){
		       	var c = candidatos[i];
		       		htmlTable+="<tr><td>"+c.nome+"</td><td>"+c.data_nasc+"</td><td>"+c.email+"</td><td>"+c.cargo+"</td></tr>";
		       }

		       listTable.innerHTML = htmlTable;

		       nome.value='';
		       data_nasc.value='';
		       email.value='';
		       
		}
		
	</script>

	<style type="text/css">
		.cadastro{
			margin-top: 5%;
			border: 1px solid #ccc;
			background-color: #ccc;
			position: absolute;
			padding: 10px;
			border-radius: 1em;
		}

		input{
			margin-left: 15px;
		}

		p input{
			float: right;
		}

		h1{
			padding-top: 2%;
			margin-bottom: -4%;
			text-align: left;
		}

		h2{
			position: absolute;
			margin-top: 23%;
		}

		#cargo{
			margin-left: 32px;
		}

		#data_nasc{
			margin-right: 15px;
		}

		#botao{
			border: 1px solid blue;
			background-color: blue;
			padding: 2px;
			text-align: center;
			border-radius: 1em;
			color: white;
		}

		table{
			position: absolute;
			margin-top: 25%; 
			border: 1px solid #ccc;
		}

		table thead{
			background-color: blue;
			color: white;

		}

		table td{
			border: 1px solid #ccc;
	
	</style>
